{
  "manifest_version": 3,
  "name": "Sudy Buddy",
  "description": "Your cute study companion",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://byui.instructure.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["inject-buddy.js"],
      "run_at": "document_idle",
      "world": "MAIN"
    }
  ],
  "permissions": ["activeTab", "pageCapture", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "icon": {
    "48": "icon.png"
  }
}
